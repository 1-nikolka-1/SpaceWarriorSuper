<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/begin_backgraund"
            android:gravity="center"
            android:text="@string/winner" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/begin_backgraund"
            android:gravity="center"
            android:text="@string/winner2" />

        <Button
            android:id="@+id/button_end_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_begin_button"
            android:text="Выбор уровня" />

    </LinearLayout>

</RelativeLayout>